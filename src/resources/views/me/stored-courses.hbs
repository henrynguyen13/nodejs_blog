<div class="mt-4">
  <h3>Tên khóa học</h3>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tên khóa học</th>
        <th scope="col">Mô tả</th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.name}}</td>
          <td>{{this.description}}</td>
        </tr>

      {{/each}}
    </tbody>
  </table>
</div>